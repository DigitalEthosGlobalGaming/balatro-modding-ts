{
    "$schema": "./tsconfig-schema.json",
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["ESNext"],
      "moduleResolution": "Node",
      "types": [
        "lua-types/5.4",
        "@typescript-to-lua/language-extensions"
      ],
      "baseUrl": "./src",
      "paths": {
        "@balatrots/*": ["../balatrots/*"]
      },
      "strict": true
    },
    "tstl": {
      "luaLibImport": "require",
      "luaBundle": "dist/bundle.lua",
      "luaBundleEntry": "./src/index.ts",
      "luaTarget": "5.4",
      "noHeader": true
    }
}